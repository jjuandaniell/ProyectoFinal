<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título y descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Captura de Recibos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toma una foto de tu recibo y súbela automáticamente a la nube"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="24dp"/>

        <!-- Vista previa de la imagen -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/previewImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder"
                android:contentDescription="Vista previa del recibo" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Botón de captura -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/captureButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="📷 Tomar Foto"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconGravity="textStart"
            style="@style/Widget.Material3.Button.ElevatedButton"/>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="🗑️ Eliminar"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/uploadButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="☁️ Subir"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button"/>

        </LinearLayout>

        <!-- Barra de progreso -->
        <ProgressBar
            android:id="@+id/uploadProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="true"
            android:visibility="gone"/>

        <!-- Estado -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listo para capturar un recibo"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:padding="12dp"
                android:gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botón para abrir la carpeta de Drive -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/openDriveFolderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Recibos en Drive"
            android:visibility="gone"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <!-- Información adicional -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Consejo: Asegúrate de que el recibo esté bien iluminado y legible antes de tomarlo"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="?attr/colorSurfaceVariant"
            android:drawablePadding="8dp"/>

    </LinearLayout>

</ScrollView>
